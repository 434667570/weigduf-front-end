.zt-panel {
   display: flex;
   flex-direction: column;
   height: 270px;
}

.zt-panel-hd {
   display: flex;
   justify-content: space-between;
   height: 50px;
   color: #333333;
}

.zt-user-box {
   display: flex;
}

.zt-user-avatar {
   width: 40px;
   height: 40px;
   margin: auto 0;
   margin-right: 10rpx;
   border-radius: 50%;
   display: block;
   overflow: hidden;
}

.zt-name-box {
   display: flex;
   flex-direction: column;
   height: 40px;
   margin: auto 0;
}

.zt-user-name {
   height: 25px;
   line-height: 25px;
   margin: auto 0;
   font-size: 14px;
   text-align: left;
}

.zt-user-title {
   height: 15px;
   line-height: 15px;
   margin: auto 0;
   font-size: 11px;
   color: #999999;
}

.zt-user-date {
   font-size: 14px;
   line-height: 50px;
   color: #999999;
}

.zt-panel-bd {
   display: flex;
   flex-direction: column;
   height: 170px;
   padding-top: 20px;
   color: #333333;
}

.zt-media-text {
   height: 44px;
   text-align: left;
   display: -webkit-box;
   -webkit-line-clamp: 2;
   -webkit-box-orient: vertical;
   overflow: hidden;
}

.zt-media-image-box {
   display: flex;
   height: 96px;
   padding: 15px 0;
}
.zt-media-image-box image{
   width: 33%;
   height: 96px;
}

.zt-panel-ft{
   display: flex;
   height: 30px;
   color: #666666;
   font-size: 14px;
}
.zt-panel-handle{
   display: flex;
   width: 33%;
   line-height: 30px;
   justify-content: center;
}
.zt-panel-handle image{
   margin: auto 0;
   width: 20px;
   height: 20px;
   margin-right: 5px;
}
.zt-panel-border{
   height: 1px;
   width: 100%;
   border-bottom: 1px solid #eeeeee;
   margin: 10px 0;
}