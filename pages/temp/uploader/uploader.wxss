.weui-uploader__file {
   float: left;
   margin-right: 4px;
   margin-bottom: 9px;
}

.weui-uploader__img {
   display: block;
   width: 158rpx;
   height: 158rpx;
}

.weui-uploader__input-box {
   float: left;
   position: relative;
   margin-right: 9px;
   margin-bottom: 9px;
   width: 154rpx;
   height: 154rpx;
   border-radius: 10px;
   border: 2px solid #a09fed;
}

.weui-uploader__input-box:after, .weui-uploader__input-box:before {
   content: " ";
   position: absolute;
   top: 50%;
   left: 50%;
   -webkit-transform: translate(-50%, -50%);
   transform: translate(-50%, -50%);
   background-color: #a09fed;
}

.weui-uploader__input-box:before {
   width: 2px;
   height: 39.5px;
}

.weui-uploader__input-box:after {
   width: 39.5px;
   height: 2px;
}

.weui-uploader__input-box:active {
   border-color: #999;
}

.weui-uploader__input-box:active:after, .weui-uploader__input-box:active:before {
   background-color: #999;
}

.weui-uploader__input {
   position: absolute;
   z-index: 1;
   top: 0;
   left: 0;
   width: 100%;
   height: 100%;
   opacity: 0;
}
